<div class="form_container">
<h1>Create New Post</h1>
<%= form_with model: @post, class: "form" do |form| %>
  <h3>Title:</h3>
  <%= form.text_field :title, placeholder: "Add title", required: true, class: "text_field" %>
  <h3>Text:</h3>
  <%= form.text_area :text, placeholder: "Write your text...", required: true, class: "text_area" %>
  <div class="submit_button_container">
    <%= form.submit "Submit", class: "button submit" %>
  </div>
<% end %>
</div>
